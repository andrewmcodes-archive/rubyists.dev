<div class="container px-5 py-24 mx-auto">
  <div class="flex flex-col w-full mb-12 text-center">
    <%= tag.h1(class: "mb-4 text-2xl font-medium text-white sm:text-3xl") { title } if title %>
    <%= tag.p(class: "lg:w-2/3 mx-auto leading-relaxed text-base") { subtitle } if subtitle %>
  </div>
  <div class="mx-auto <%= body_width %>">
    <div class="flex flex-col -m-2">
      <%= body %>
    </div>
  </div>
</div>
