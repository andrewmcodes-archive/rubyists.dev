<div class="w-full p-2 lg:w-1/3 md:w-1/2">
  <div class="flex flex-col items-center h-full p-4 border border-gray-800 rounded-lg">
    <div class="mb-2">
      <h2 class="font-medium text-white title-font"><%= title %></h2>
      <%= tag.p(class: "text-gray-600") { badge.description } if badge.description %>
    </div>
    <%= image_tag badge.asset_url, class: "flex-shrink-0 object-cover object-center mr-4", alt: badge.title %>
  </div>
</div>
